<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".expand_page"
    android:background="@color/grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/expand_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/active_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/expand_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/active_txt2"
        android:padding="5dp"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:background="@drawable/display_style"
        app:layout_constraintTop_toTopOf="@+id/active_txt"
        app:layout_constraintBottom_toBottomOf="@+id/active_txt"
        app:layout_constraintLeft_toRightOf="@+id/active_txt"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/confirmed_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmed:"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/active_txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/confirmed_txt2"
        android:layout_width="0dp"
        android:padding="5dp"

        android:textColor="@color/white"
        android:background="@drawable/display_style"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/confirmed_txt"
        app:layout_constraintBottom_toBottomOf="@+id/confirmed_txt"
        app:layout_constraintLeft_toRightOf="@+id/confirmed_txt"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/migrated_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Migrated Other:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/confirmed_txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/migrated_txt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:padding="5dp"
        android:background="@drawable/display_style"
        app:layout_constraintTop_toTopOf="@+id/migrated_txt"
        app:layout_constraintBottom_toBottomOf="@+id/migrated_txt"
        app:layout_constraintLeft_toRightOf="@+id/migrated_txt"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/deceased_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Deceased:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/migrated_txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/deceased_txt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/display_style"
        android:textColor="@color/white"
        android:padding="5dp"

        app:layout_constraintTop_toTopOf="@+id/deceased_txt"
        app:layout_constraintBottom_toBottomOf="@+id/deceased_txt"
        app:layout_constraintLeft_toRightOf="@+id/deceased_txt"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/recovered_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Recovered:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/deceased_txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/recovered_txt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/display_style"
        android:textColor="@color/white"
        android:padding="5dp"

        app:layout_constraintTop_toTopOf="@+id/recovered_txt"
        app:layout_constraintBottom_toBottomOf="@+id/recovered_txt"
        app:layout_constraintLeft_toRightOf="@+id/recovered_txt"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/delta_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/recovered_txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="DELTA"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/d_confirmed_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Confirmed:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/delta_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/d_confirmed_txt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/display_style"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/d_confirmed_txt"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/d_confirmed_txt"
        app:layout_constraintLeft_toRightOf="@+id/d_confirmed_txt"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/d_deceased_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Deceased:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/d_confirmed_txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/d_deceased_txt2"
        android:layout_width="0dp"
        android:background="@drawable/display_style"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/d_deceased_txt"
        app:layout_constraintBottom_toBottomOf="@+id/d_deceased_txt"
        app:layout_constraintLeft_toRightOf="@+id/d_deceased_txt"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/d_recovered_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recovered:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/d_deceased_txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/d_recovered_txt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:padding="5dp"
        android:background="@drawable/display_style"
        app:layout_constraintTop_toTopOf="@+id/d_recovered_txt"
        app:layout_constraintBottom_toBottomOf="@+id/d_recovered_txt"
        app:layout_constraintLeft_toRightOf="@+id/d_recovered_txt"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/notes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes:"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/d_recovered_txt2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/notes_txt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/notes_txt"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/notes_txt"
        app:layout_constraintLeft_toRightOf="@+id/notes_txt"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/display_style"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_marginRight="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>